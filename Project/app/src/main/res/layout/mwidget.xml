        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>

    <TextView
        android:id="@+id/wnha"
        android:gravity="center"
        android:textSize="30dp"
        android:text="今天没有课哦！！！"

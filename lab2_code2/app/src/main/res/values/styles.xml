<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/twenty_margin</item>
        <item name="android:textSize">@dimen/twenty_textSize</item>
        <item name="android:textColor">@color/colorBlack</item>

    </style>

    <style name="imageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/twenty_margin</item>
        <item name="android:layout_marginBottom">@dimen/twenty_margin</item>
    </style>

    <style name="textinput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/twenty_margin</item>
        <item name="android:layout_marginRight">@dimen/twenty_margin</item>
    </style>

    <style name="edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/eighty_textSize</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="myButtonStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/eighty_textSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/mybutton</item>
        <item name="android:paddingLeft">@dimen/ten_margin</item>
        <item name="android:paddingRight">@dimen/ten_margin</item>
        <item name="android:paddingTop">@dimen/five_margin</item>
        <item name="android:paddingBottom">@dimen/five_margin</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="radioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/twenty_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="radioButton">
        <item name="android:color">@color/colorBlack</item>
        <item name="android:textSize">@dimen/eighty_textSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>

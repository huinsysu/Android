<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.study.android.ahu.experimentthree.detailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/topPart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/backImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/backImageStyle"/>

            <TextView
                android:id="@+id/detailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/detailNameStyle"/>

            <ImageView
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/empty_star"
                style="@style/starStyle"/>

            <ImageView
                android:id="@+id/fullStar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@mipmap/full_star"
                style="@style/starStyle"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/detailPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/detailPhoneStyle"/>

                <TextView
                    android:id="@+id/detailType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/detailTypeStyle"/>

                <TextView
                    android:id="@+id/detailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/detailAddressStyle"/>

                <ImageView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/messageStyle"/>

                <TextView
                    android:id="@+id/verticalLine"
                    android:layout_width="@dimen/margin_one"
                    android:layout_height="match_parent"
                    style="@style/verticalLineStyle"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/thinLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_one"
                style="@style/lineStyle"/>

            <TextView
                android:id="@+id/tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/tipStyle"/>

            <TextView
                android:id="@+id/thickLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_twenty"
                android:layout_marginTop="@dimen/margin_twelve"
                android:background="@color/colorGlay"/>

            <ListView
                android:id="@+id/edit_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
